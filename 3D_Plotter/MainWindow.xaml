<Window x:Class="_3D_Plotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_Plotter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Visible"/>
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Bottom">
            <Button Name="Start" Width="100" Height="50" Content="Start" GotFocus="OnGotFocusHandler" LostFocus="OnLostFocusHandler"/>
            <Button Name="Plot" Width="100" Height="50" Content="Plot" GotFocus="OnGotFocusHandler" LostFocus="OnLostFocusHandler"/>
            <Button Name="Settings" Width="100" Height="50" Content="Settings" GotFocus="OnGotFocusHandler" LostFocus="OnLostFocusHandler"/>
        </StackPanel>
    </Grid>
</Window>
